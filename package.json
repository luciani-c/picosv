{
  "name": "tsv",
  "version": "0.0.1",
  "description": "A tiny schema validator",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "main": "dist/tsv.umd.js",
  "module": "dist/tsv.mjs",
  "exports": {
    ".": {
      "import": "./dist/tsv.mjs",
      "require": "./dist/tsv.umd.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist/ && tsc --noEmit && vite build",
    "prepublish": "npm run build",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "lint": "eslint \"./src/**/*.ts\""
  },
  "keywords": [
    "JSON",
    "schema",
    "validator",
    "validation"
  ],
  "author": "ziggornif <ziggornif@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node20": "20.1.4",
    "@vitest/coverage-v8": "^1.5.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-dts": "^3.9.0",
    "vitest": "^1.5.2"
  },
  "dependencies": {
    "typescript-json-schema": "^0.63.0"
  }
}