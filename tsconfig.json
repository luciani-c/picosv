{
  "extends": "@tsconfig/node20/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "./",
    "noImplicitAny": false,
    "lib": [
      "ES2016",
      "dom"
  ],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]

}